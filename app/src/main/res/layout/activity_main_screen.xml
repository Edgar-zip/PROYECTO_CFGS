<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E6D6D6"
    tools:context=".MainScreenActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#7A7DFF"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/playtomic_logo"  <!-- reemplaza por tu logo -->
        android:contentDescription="logo" />

        <SearchView
            android:id="@+id/search_view"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:iconifiedByDefault="false"
            android:queryHint="Buscar" />
    </LinearLayout>

    <!-- TÃ­tulo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Todo lo que ofrecemos"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="16dp" />

    <!-- Secciones -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="16dp">

        <!-- Pistas -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4A56FF"
                android:text="Pistas"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="16sp"
                android:padding="6dp"
                android:layout_marginBottom="4dp"/>

            <ImageView
                android:id="@+id/card_pistas"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pistas_img" />
        </LinearLayout>

        <!-- Nuestra Ropa -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4A56FF"
                android:text="Nuestra Ropa"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="16sp"
                android:padding="6dp"
                android:layout_marginBottom="4dp"/>

            <ImageView
                android:id="@+id/card_ropa"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ropa_img" />
        </LinearLayout>

        <!-- Reservas -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4A56FF"
                android:text="Reservas"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="16sp"
                android:padding="6dp"
                android:layout_marginBottom="4dp"/>

            <ImageView
                android:id="@+id/card_reservas"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/reservas_img" />
        </LinearLayout>
    </GridLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/nav_background"
        android:layout_gravity="bottom"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/nav_color_selector"
        app:itemTextColor="@color/nav_color_selector"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>
